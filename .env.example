# Copy this file to `.env` and fill in values.
#
# Notes:
# - The web app uses Redis for task/progress tracking.
# - The CLI can run without Redis.

# Redis (preferred)
REDIS_URL=redis://localhost:6379/0

# Alternative Redis env var used by Heroku Redis add-ons
# HEROKU_REDIS_OLIVE_URL=

# Session cookie secret (set a long random string in production)
SESSION_SECRET=change-me

# Logging
LOG_LEVEL=INFO

# LLM provider API keys (set at least one)
OPENAI_API_KEY=
GROQ_API_KEY=
DEEPSEEK_API_KEY=

# Optional model overrides
OPENAI_MODEL=gpt-5
OPENAI_COMPARISON_MODEL=gpt-5
OPENAI_EXPERIMENT_MODEL=gpt-5
OPENAI_EXPERIMENT_REASONING_EFFORT=medium
GROQ_MODEL=llama-3.3-70b-versatile
DEEPSEEK_MODEL=deepseek-reasoner

# Optional parser overrides
GROBID_URL=https://kermitt2-grobid.hf.space/api/processFulltextDocument
DPT_API_KEY=
DPT_URL=https://api.va.eu-west-1.landing.ai/v1/ade/parse

# Optional directories (defaults are repo-relative)
STATIC_DIR=static
TEMPLATES_DIR=templates
UPLOAD_DIR=uploads
